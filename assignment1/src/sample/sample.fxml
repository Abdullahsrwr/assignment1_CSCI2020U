<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="20" vgap="20">

    <Label style="-fx-font: NORMAL 30 TAHOMA;" text="Spam Detection Chart"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TableView fx:id='tableView' GridPane.columnIndex='0' GridPane.rowIndex='1' minWidth="700" minHeight="500">
        <columns>
            <TableColumn fx:id="fileName" text="File Name" prefWidth="400"></TableColumn>
            <TableColumn fx:id="actualClass" text="Actual Class" prefWidth="100"></TableColumn>
            <TableColumn fx:id="probability" text="Spam Probability" prefWidth="200"></TableColumn>
        </columns>
    </TableView>

    <Label lineSpacing="10" style="-fx-font: NORMAL 20 TAHOMA;" text="Accuracy: "
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="accuracy"
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label lineSpacing="10" style="-fx-font: NORMAL 20 TAHOMA;" text="Precision: "
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="precision"
               GridPane.columnIndex="0" GridPane.rowIndex="5"/>
</GridPane>