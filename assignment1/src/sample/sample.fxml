<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TableView fx:id='tableView' GridPane.columnIndex='0' GridPane.rowIndex='0' minWidth="800" minHeight="500">
        <columns>
            <TableColumn fx:id="fileName" text="File Name"></TableColumn>
            <TableColumn fx:id="actualClass" text="Actual Class"></TableColumn>
            <TableColumn fx:id="probability" text="Spam Probability"></TableColumn>
        </columns>
    </TableView>
</GridPane>